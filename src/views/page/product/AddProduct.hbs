<link rel="stylesheet" href="/css/addProduct.css">

<div class="container p-4">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between" style="background: black; color: white;">
                    <div class="header-title">
                        <h4 class="card-title">Add Product</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form id="productForm">
                        <div class="row">
                            <div class="col-7">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="information-section">
                                            <h2>General Information</h2>
                                            <div class="form-group mb-3">
                                                <label for="product-name">Product Name</label>
                                                <input type="text" class="form-control" id="product-name" name="name" placeholder="Enter product name">
                                            </div>

                                            <div class="form-group mb-3">
                                                <label for="product-description">Product Description</label>
                                                <textarea class="form-control" id="product-description" name="desc" rows="6" placeholder="Enter product description" style="resize: none"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="pricing-and-stock-section mt-3">
                                            <h2>Pricing and Stock</h2>
                                            <div class="row">
                                                <div class="form-group col-4 mb-3">
                                                    <label for="product-price">Price</label>
                                                    <input type="number" class="form-control" id="product-price" name="price" placeholder="Enter product price">
                                                </div>

                                                <div class="form-group col-4 mb-3">
                                                    <label for="product-quantity">Quantity</label>
                                                    <input type="number" class="form-control" id="product-quantity" name="inventory_quantity" placeholder="Enter product quantity">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="discount-section mt-3" style="background: #f9f9f9; padding: 1rem; border-radius: 15px;">
                                            <h2>Status</h2>
                                            <div class="row">
                                                <select class="form-select" id="product-status" name="business_status">
                                                    <option value="false">Suspended</option>
                                                    <option value="true" selected>Active</option>
                                                </select>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="image-upload-section">
                                            <h2>Product Images</h2>
                                            <div class="main-image-preview mb-3" >
                                                {{#if mainImage}}
                                                    <img src="{{mainImage.url}}" alt="Main preview" class="main-preview-img">
                                                {{else}}
                                                    <div class="upload-placeholder">
                                                        <i class="upload-icon"></i>
                                                    </div>
                                                {{/if}}
                                            </div>

                                            <div class="thumbnail-strip d-flex align-items-center">
                                                {{#each images}}
                                                    <div class="thumbnail-wrapper" data-image-id="{{this.id}}">
                                                        <img src="{{this.url}}" alt="thumbnail" class="thumbnail-img">
                                                        <button type="button" class="remove-image" data-image-id="{{this.id}}">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </div>
                                                {{/each}}
                                                <label class="add-image-button">
                                                    <input type="file" name="image_urls" multiple accept="image/*" class="hidden-file-input">
                                                    <i class="fas fa-plus"></i>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="category-and-brand-section mt-3" style="background: #f9f9f9; padding: 1rem; border-radius: 15px;">
                                            <h2>Category and Brand</h2>
                                            <div class="row">
                                                <div class="form-group col-6 mb-3">
                                                    <label for="product-category">Category</label>
                                                    <button type="button" class="btn btn-sm btn-primary add-button" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                    <select class="form-select selectpicker" id="product-category" name="category_id" data-live-search="true">
                                                        {{#each categoryList}}
                                                            <option value="{{this.id}}">{{this.name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>

                                                <div class="form-group col-6 mb-3">
                                                    <label for="product-brand">Brand</label>
                                                    <button type="button" class="btn btn-sm btn-primary add-button" data-bs-toggle="modal" data-bs-target="#addBrandModal">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                    <select class="form-select selectpicker" id="product-brand" name="brand_id" data-live-search="true">
                                                        {{#each brandList}}
                                                            <option value="{{this.id}}">{{this.name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-dark">Add Product</button>
                            <button type="reset" class="btn btn-outline-dark">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Adding Category -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addCategoryForm">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="categoryName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="categoryDesc" class="form-label">Description</label>
                        <textarea class="form-control" id="categoryDesc" name="description" rows="3" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="addCategoryForm" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Adding Brand -->
<div class="modal fade" id="addBrandModal" tabindex="-1" aria-labelledby="addBrandModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBrandModalLabel">Add New Brand</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addBrandForm">
                    <div class="mb-3">
                        <label for="brandName" class="form-label">Brand Name</label>
                        <input type="text" class="form-control" id="brandName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="brandDesc" class="form-label">Description</label>
                        <textarea class="form-control" id="brandDesc" name="description" rows="3" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="addBrandForm" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/addProduct.js"></script>
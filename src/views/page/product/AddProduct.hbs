<link rel="stylesheet" href="/css/AddProduct.css">
<script src="/js/AddProduct.js"></script>

<div class="container p-4">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between" style="background: black; color: white;">
                    <div class="header-title">
                        <h4 class="card-title">Add Product</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form id="productForm">
                        <div class="row">
                            <div class="col-7">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="information-section">
                                            <h2>General Information</h2>
                                            <div class="form-group mb-3">
                                                <label for="product-name">Product Name</label>
                                                <input type="text" class="form-control" id="product-name" name="productName" placeholder="Enter product name">
                                            </div>

                                            <div class="form-group mb-3">
                                                <label for="product-description">Product Description</label>
                                                <textarea class="form-control" id="product-description" name="productDescription" rows="6" placeholder="Enter product description"></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="pricing-and-stock-section mt-3">
                                            <h2>Pricing and Stock</h2>
                                            <div class="row">
                                                <div class="form-group col-4 mb-3">
                                                    <label for="product-price">Price</label>
                                                    <input type="number" class="form-control" id="product-price" name="productPrice" placeholder="Enter product price">
                                                </div>

                                                <div class="form-group col-4 mb-3">
                                                    <label for="product-quantity">Quantity</label>
                                                    <input type="number" class="form-control" id="product-quantity" name="productQuantity" placeholder="Enter product quantity">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="discount-section mt-3" style="background: #f9f9f9; padding: 1rem; border-radius: 15px;">
                                            <h2>Discount</h2>
                                            <div class="row">
                                                <div class="form-group col-6 mb-3">
                                                    <label for="product-discount">Discount</label>
                                                    <input type="number" class="form-control" id="product-discount" name="productDiscount" placeholder="Enter product discount">
                                                </div>
                                                <div class="form-group col-6 mb-3">
                                                    <label for="product-discount-type">Discount Type</label>
                                                    <input type="text" class="form-control" id="product-discount-type" name="productDiscountType" placeholder="Enter product discount type">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="image-upload-section">
                                            <h2>Product Images</h2>
                                            <div class="main-image-preview mb-3" >
                                                {{#if mainImage}}
                                                    <img src="{{mainImage.url}}" alt="Main preview" class="main-preview-img">
                                                {{else}}
                                                    <div class="upload-placeholder">
                                                        <i class="upload-icon"></i>
                                                    </div>
                                                {{/if}}
                                            </div>

                                            <div class="thumbnail-strip d-flex align-items-center">
                                                {{#each images}}
                                                    <div class="thumbnail-wrapper" data-image-id="{{this.id}}">
                                                        <img src="{{this.url}}" alt="thumbnail" class="thumbnail-img">
                                                        <button type="button" class="remove-image" data-image-id="{{this.id}}">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </div>
                                                {{/each}}
                                                <label class="add-image-button">
                                                    <input type="file" name="productImages" multiple accept="image/*" class="hidden-file-input">
                                                    <i class="fas fa-plus"></i>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="category-and-brand-section mt-3" style="background: #f9f9f9; padding: 1rem; border-radius: 15px;">
                                            <h2>Category and Brand</h2>
                                            <div class="row">
                                                <div class="form-group col-6 mb-3">
                                                    <label for="product-category">Category</label>
                                                    <select class="form-select" id="product-category" name="productCategory">
                                                        <option value="">Select Category</option>
                                                        {{#each categoryList}}
                                                            <option value="{{this.id}}">{{this.name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>

                                                <div class="form-group col-6 mb-3">
                                                    <label for="product-brand">Brand</label>
                                                    <select class="form-select" id="product-brand" name="productBrand">
                                                        <option value="">Select Brand</option>
                                                        {{#each brandList}}
                                                            <option value="{{this.id}}">{{this.name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-dark">Add Product</button>
                            <button type="reset" class="btn btn-outline-dark">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
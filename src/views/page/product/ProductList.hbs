<link rel="stylesheet" href="/css/ProductList.css">
<script src="/js/ProductList.js"></script>

<div class="container p-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4 row">
                <div class="col-10">
                    <div class="row">
                        <div class="col-8">
                            <div class="d-flex">
                                <select class="form-select m-2" id="category-select">
                                    {{#each categoryList}}
                                        <option value="{{this.id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                                <select class="form-select m-2" id="brand-select">
                                    {{#each brandList}}
                                        <option value="{{this.id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                                <!-- price min-->
                                <input type="text" class="form-control m-2" placeholder="Price min"/>
                                <!-- price max-->
                                <input type="text" class="form-control m-2" placeholder="Price max"/>
                            </div>

                        </div>
                        <div class="search col-4">
                            <form action="#" method="get" class="m-2">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search product"/>
                                    <div class="input-group-append">
                                        <button class="btn btn-dark" type="submit">
                                            <i class="fa-solid fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-2 d-flex justify-content-end">
                    <a href="/products/create" class="btn btn-dark add-list">
                        <i class="fa-solid fa-plus"></i>
                        Add Product
                    </a>
                </div>
            </div>
        </div>


        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="text-uppercase text-center">
                        <tr>
                            <th></th>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Brand Name</th>
                            <th>Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each productList}}
                        <tr class="text-center">
                            <td>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox2">
                                    <label for="checkbox2" class="mb-0"></label>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="{{this.image_urls.[0]}}" alt="image">
                                    <div>
                                        <div class="m-2">
                                            <span class="product-name">{{this.name}}</span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="product-category">{{this.category.name}}</span>
                            </td>
                            <td>${{this.price}}</td>
                            <td class="text-uppercase">
                                <span class="product-brand">{{this.brand.name}}</span>
                            </td>
                            <td>{{this.inventory_quantity}}</td>
                            <td>
                                <div class="d-flex align-items-center justify-content-center list-action">
                                    <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title=""
                                       data-original-title="View" href="#">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title=""
                                       data-original-title="Edit" href="#">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title=""
                                       data-original-title="Delete" href="#">
                                        <i class="fa-solid fa-x"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>

    <nav aria-label="Page navigation example" class="d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item {{#if pagination.hasPrev}}disabled{{/if}}">
                <button class="page-link" data-page="{{pagination.prevPage}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </button>
            </li>
            {{#each pagination.pages}}
                <li class="page-item {{#if this.active}}active{{/if}}">
                    <button class="page-link" data-page="{{this.number}}">{{this.number}}</button>
                </li>
            {{/each}}
            <li class="page-item {{#if pagination.hasNext}}disabled{{/if}}">
                <button class="page-link" data-page="{{pagination.nextPage}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </button>
            </li>
        </ul>
    </nav>
</div>

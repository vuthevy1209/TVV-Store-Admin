<link rel="stylesheet" href="/css/userList.css">

<div class="container p-4">
    <div class="row">
        <div class="col-lg-12">
            <form>
                <div class="row">
                    <div class="col-10">
                        <div class="d-flex">
                            <input type="text" class="form-control m-2" name="username" placeholder="Username" value="{{username}}" />
                            <input type="text" class="form-control m-2" name="email" placeholder="Email" value="{{email}}" />
                            <div class="input-group m-2">
                                <button class="btn btn-dark" type="submit">
                                    <i class="fa-solid fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="text-uppercase text-center">
                    <tr>
                        <th></th>
                        <th>
                            <div class="header-with-sort">
                                Username
                                <div class="sort-buttons">
                                    <button class="sort-button" data-sort="username" data-order="asc">
                                        <svg viewBox="0 0 320 240" xmlns="http://www.w3.org/2000/svg" width="16" height="16">
                                            <path d="M27.66 224h264.7c24.6 0 36.89-29.78 19.54-47.12l-132.3-136.8c-5.406-5.406-12.47-8.107-19.53-8.107c-7.055 0-14.09 2.701-19.45 8.107L8.119 176.9C-9.229 194.2 3.055 224 27.66 224z"/>
                                        </svg>
                                    </button>
                                    <button class="sort-button" data-sort="username" data-order="desc">
                                        <svg viewBox="0 0 320 180" xmlns="http://www.w3.org/2000/svg" width="16" height="16">
                                            <path d="M27.66 0h264.7c24.6 0 36.89 29.78 19.54 47.12l-132.3 136.8c-5.406 5.406-12.47 8.107-19.53 8.107s-14.09-2.701-19.45-8.107L8.119 47.12C-9.229 29.78 3.055 0 27.66 0z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </th>
                        <th style="padding-top: 10px;">
                            Full Name
                        </th>
                        <th>
                            <div class="header-with-sort">
                                Email
                                <div class="sort-buttons">
                                    <button class="sort-button" data-sort="email" data-order="asc">
                                        <svg viewBox="0 0 320 240" xmlns="http://www.w3.org/2000/svg" width="16" height="16">
                                            <path d="M27.66 224h264.7c24.6 0 36.89-29.78 19.54-47.12l-132.3-136.8c-5.406-5.406-12.47-8.107-19.53-8.107c-7.055 0-14.09 2.701-19.45 8.107L8.119 176.9C-9.229 194.2 3.055 224 27.66 224z"/>
                                        </svg>
                                    </button>
                                    <button class="sort-button" data-sort="email" data-order="desc">
                                        <svg viewBox="0 0 320 180" xmlns="http://www.w3.org/2000/svg" width="16" height="16">
                                            <path d="M27.66 0h264.7c24.6 0 36.89 29.78 19.54 47.12l-132.3 136.8c-5.406 5.406-12.47 8.107-19.53 8.107s-14.09-2.701-19.45-8.107L8.119 47.12C-9.229 29.78 3.055 0 27.66 0z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </th>
                        <th style="padding-top: 10px;">
                            Role
                        </th>
                        <th>
                            <div class="header-with-sort">
                                Registration Time
                                <div class="sort-buttons">
                                    <button class="sort-button" data-sort="created_at" data-order="asc">
                                        <svg viewBox="0 0 320 240" xmlns="http://www.w3.org/2000/svg" width="16" height="16">
                                            <path d="M27.66 224h264.7c24.6 0 36.89-29.78 19.54-47.12l-132.3-136.8c-5.406-5.406-12.47-8.107-19.53-8.107c-7.055 0-14.09 2.701-19.45 8.107L8.119 176.9C-9.229 194.2 3.055 224 27.66 224z"/>
                                        </svg>
                                    </button>
                                    <button class="sort-button" data-sort="created_at" data-order="desc">
                                        <svg viewBox="0 0 320 180" xmlns="http://www.w3.org/2000/svg" width="16" height="16">
                                            <path d="M27.66 0h264.7c24.6 0 36.89 29.78 19.54 47.12l-132.3 136.8c-5.406 5.406-12.47 8.107-19.53 8.107s-14.09-2.701-19.45-8.107L8.119 47.12C-9.229 29.78 3.055 0 27.66 0z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </th>
                        <th style="padding-top: 10px;">
                            Action
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each userList}}
                        <tr class="text-center">
                            <td>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox2">
                                    <label for="checkbox2" class="mb-0"></label>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="{{defaultVal this.avatar_url '/images/avatar_place_holder.jpg'}}" alt="image" class="avatar">
                                    <div>
                                        {{this.username}}
                                    </div>
                                </div>
                            </td>
                            <td>
                                {{this.first_name}} {{this.last_name}}
                            </td>
                            <td>
                                {{this.email}}
                            </td>
                            <td>
                                {{this.role.name}}
                            </td>
                            <td>
                                {{this.formatted_created_at}}
                            </td>
                            <td class="d-flex">
                                <button class="btn btn-success mr-2">
                                    <a href="/users/{{this.id}}" style="color: white;"> 
                                        <div class="button button-view ">
                                            <i class="fa-solid fa-eye p-2"></i><span>View</span>
                                        </div>
                                    </a>
                                </button>
                                {{#unless this.isCurrentUser}}
                                <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#deleteModal-{{this.id}}">
                                    <i class="fa-solid fa-trash"></i> BAN
                                </button>
                                {{/unless}}
                                
                            </td>
                        </tr>

                        <!-- Modal Delete -->
                        <div class="modal" id="deleteModal-{{this.id}}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Ban</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to ban this user?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                            Close
                                        </button>
                                        <button type="button" class="btn btn-dark button-delete-modal" data-id="{{this.id}}" data-bs-dismiss="modal">
                                            Ban
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>

    <nav class="d-flex justify-content-center">
        <ul class="pagination">
            {{#if (gt pagination.currentPage 1)}}
            <li class="page-item">
                <button class="page-link" data-page="{{subtract pagination.currentPage 1}}">&laquo;</button>
            </li>
            {{/if}}
            {{#each pagination.pages}}
            <li class="page-item {{#if this.active}}active{{/if}}">
                <button class="page-link" data-page="{{this.number}}">{{this.number}}</button>
            </li>
            {{/each}}
            {{#if (lt pagination.currentPage pagination.totalPages)}}
            <li class="page-item">
                <button class="page-link" data-page="{{add pagination.currentPage 1}}">&raquo;</button>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>

<script src="/js/userList.js"></script>
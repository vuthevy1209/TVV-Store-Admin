<link rel="stylesheet" href="/css/UserDetail.css">

<div class="container p-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3>User Details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="{{defaultVal user.avatar_url '/images/avatar_place_holder.jpg'}}" alt="User Avatar" class="img-fluid rounded-circle">
                        </div>
                        <div class="col-md-8">
                            <h4>{{user.username}}</h4>
                            <p><strong>Full Name:</strong> {{user.first_name}} {{user.last_name}}</p>
                            <p><strong>Email:</strong> {{user.email}}</p>
                            <p><strong>Role:</strong> {{user.role.name}}</p>
                            <p><strong>Registration Time:</strong> {{user.formatted_created_at}}</p>
                            <p><strong>Status:</strong> {{#if user.status}}Active{{else}}Blocked{{/if}}</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/users" class="btn btn-dark">Back to User List</a>
                </div>
            </div>
        </div>
    </div>
</div>

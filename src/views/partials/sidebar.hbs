<link rel="stylesheet" href="/css/sidebar.css">

<div class="sidebar">

    <div class="logo d-flex justify-content-center align-items-center" id="logo">
        <img src="/images/logo.png" alt="TVV_Store">
        <span style="font-size: 1.5rem; font-weight: bold; color: #333; margin-left: 25px">
            <i class="fa-solid fa-bars"></i>
        </span>
    </div>

    <hr>

    <nav class="menu flex-column">
        <div class="menu-item">
            <a href="/dashboard" class="nav-link d-flex align-items-center">
                <i class="fa-solid fa-house"></i>
                <span class="m-2 title">Dashboard</span>
            </a>
        </div>
        <div class="menu-item">
            <a href="/products" class="nav-link d-flex align-items-center">
                <i class="fa-solid fa-layer-group"></i>
                <span class="m-2 title">Products</span>
            </a>
        </div>
        <div class="menu-item">
            <a href="/orders" class="nav-link d-flex align-items-center">
                <i class="fa-solid fa-truck-fast"></i>
                <span class="m-2 title">Oders</span>
            </a>
        </div>
        <div class="menu-item">
            <a href="/customers" class="nav-link d-flex align-items-center">
                <i class="fa-solid fa-users-line"></i>
                <span class="m-2 title">Customers</span>
            </a>
        </div>
    </nav>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });
    });

    document.getElementById("logo").addEventListener("click", function() {
        window.location.href = "/dashboard";
    });

</script>